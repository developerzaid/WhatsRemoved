<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <include
        android:id="@+id/main_page_toolbar"
        layout="@layout/app_bar_layout" />


    <RelativeLayout
        android:id="@+id/layout_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_page_toolbar"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:visibility="gone">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:contentDescription="empty"
                android:src="@drawable/empty_screen" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="24dp"
                android:layout_marginVertical="5dp"
                android:fontFamily="@font/roboto_condensed_bold"
                android:gravity="center_horizontal|center_vertical"
                android:lineSpacingExtra="2sp"
                android:text="@string/hello"
                android:textAppearance="@style/title"
                android:textFontWeight="700" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:lineSpacingExtra="2sp"
                android:text="I will help you today. Letâ€™s start with granting some needed permission."
                android:textAlignment="center"
                android:textColor="#040000"
                android:textFontWeight="400"
                android:textSize="16sp" />

        </LinearLayout>

        <Button
            android:id="@+id/grantButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/button_gradient"
            android:drawableEnd="@drawable/arrow_right"
            android:paddingHorizontal="8dp"
            android:text="@string/grant_notification_access"
            android:textAllCaps="false"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_two"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_page_toolbar"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:contentDescription="empty"
                android:src="@drawable/empty_screen" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="24dp"
                android:layout_marginVertical="5dp"
                android:fontFamily="@font/roboto_condensed_bold"
                android:gravity="center_horizontal|center_vertical"
                android:lineSpacingExtra="2sp"
                android:text="You are doing great..."
                android:textAppearance="@style/title"
                android:textFontWeight="700" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:gravity="center_horizontal|center_vertical"
                android:lineSpacingExtra="2sp"
                android:text="Now lets provide storage permission so that I can store downloaded data for you"
                android:textAlignment="center"
                android:textColor="#040000"
                android:textFontWeight="400"
                android:textSize="16sp" />

        </LinearLayout>

        <Button
            android:id="@+id/grantButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/button_gradient"
            android:drawableEnd="@drawable/arrow_right"
            android:paddingHorizontal="8dp"
            android:text="Grant Storage Access"
            android:textAllCaps="false"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_three"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_page_toolbar"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:visibility="gone">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:contentDescription="empty"
                android:src="@drawable/empty_screen" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="24dp"
                android:layout_marginVertical="5dp"
                android:fontFamily="@font/roboto_condensed_bold"
                android:gravity="center_horizontal|center_vertical"
                android:lineSpacingExtra="2sp"
                android:text="You are doing great..."
                android:textAppearance="@style/title"
                android:textFontWeight="700" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:gravity="center_horizontal|center_vertical"
                android:lineSpacingExtra="2sp"
                android:text="Please provide auto start permission so that I can save deleted message for you."
                android:textAlignment="center"
                android:textColor="#040000"
                android:textFontWeight="400"
                android:textSize="16sp" />

        </LinearLayout>

        <Button
            android:id="@+id/grantButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/button_gradient"
            android:drawableEnd="@drawable/arrow_right"
            android:paddingHorizontal="8dp"
            android:text="Enable Auto Start"
            android:textAllCaps="false"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_four"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_page_toolbar"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/grantButton4"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:contentDescription="empty"
                android:src="@drawable/empty_screen" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="24dp"
                android:layout_marginVertical="5dp"
                android:fontFamily="@font/roboto_condensed_bold"
                android:gravity="center_horizontal|center_vertical"
                android:lineSpacingExtra="2sp"
                android:text="Perfect..."
                android:textAppearance="@style/title"
                android:textFontWeight="700" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:gravity="center_horizontal|center_vertical"
                android:lineSpacingExtra="2sp"
                android:text="I am ready to save deleted messages for you, just make sure to keep media in auto download."
                android:textAlignment="center"
                android:textColor="#040000"
                android:textFontWeight="400"
                android:textSize="16sp" />

        </LinearLayout>

        <Button
            android:id="@+id/grantButton4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/button_gradient"
            android:drawableEnd="@drawable/arrow_right"
            android:paddingHorizontal="8dp"
            android:text="Start"
            android:textAllCaps="false"
            android:textSize="20sp" />

    </RelativeLayout>

</RelativeLayout>